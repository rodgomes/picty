<html>
	<head>
		<title>Picty - Picture a city in a given month!</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>" />
	</head>
	<body class="index">
		<div id="page-wrapper">

			<!-- Header -->
				<header id="header" class="<%= header_class(@conn) %>">
					<h1 id="logo"><a href="index.html">Picty <span> - Picture a city</span></a></h1>
					<nav id="nav">
						<ul>
							<li class ="<%= active_class(@conn, page_path(Picty.Endpoint, :index)) %>"><a href="<%= page_path(Picty.Endpoint, :index) %>">Home</a></li>
							<li class="<%= active_class(@conn, page_path(Picty.Endpoint, :about)) %>"><a href="<%= page_path(Picty.Endpoint, :about) %>" class="button special">About</a></li>
						</ul>
					</nav>
				</header>

      <!-- Main -->
      <%= render @view_module, @view_template, assigns %>

			<!-- Footer -->
				<footer id="footer">

					<ul class="icons">
						<li><a href="https://twitter.com/rod_gomes" class="icon circle fa-twitter"><span class="label">Twitter</span></a></li>
						<li><a href="https://github.com/rodgomes/picty" class="icon circle fa-github"><span class="label">Github</span></a></li>
            <li><a href="https://www.instagram.com/rod_gomes" class="icon circle fa-instagram"><span class="label">Instagram</span></a></li>
					</ul>

					<ul class="copyright">
						<li>&copy; Picty</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
					</ul>

				</footer>

		</div>
		<!-- Scripts -->
		<script type="text/javascript" src="<%= static_path(@conn, "/js/vendor.js") %>" ></script>
    <script type="text/javascript" src="<%= static_path(@conn, "/js/app.js") %>" ></script>
		<%= render_existing view_module(@conn), "scripts.html", assigns %>
	</body>
</html>
